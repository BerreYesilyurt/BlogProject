@model EntityLayer.Concrete.Category

@{
    ViewBag.Title = "CategoryEdit";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}


<form class="form-group" method="post">

    @Html.Label("ID") @*Label kısmı*@
    @Html.TextBoxFor(x => x.CategoryID, new { @class = "form-control" }) @*İnput kısmı*@

    @Html.Label("Kategori Adı") @*Label kısmı*@
    @Html.TextBoxFor(x => x.CategoryName, new { @class = "form-control" }) @*İnput kısmı*@
    @Html.ValidationMessageFor(x => x.CategoryName)
    <br />

    @Html.Label("Açıklama") @*Label kısmı*@
    @Html.TextBoxFor(x => x.CategoryDescription, new { @class = "form-control" }) @*İnput kısmı*@
    @Html.ValidationMessageFor(x => x.CategoryDescription)

    <br />

    <button class="btn btn-info">Kaydet</button>


</form>



