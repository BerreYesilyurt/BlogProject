@model IEnumerable<EntityLayer.Concrete.Blog>


@{
    ViewBag.Title = "BlogList";
    Layout = "~/Views/Shared/AuthorLayout.cshtml";
}

@{ string color = "";}
@{ string durum = "";}
@{ string ad = "";}
<!DOCTYPE html>

<html>



<body class="hold-transition sidebar-mini">



    <!-- Main content -->

    <section class="content">

        <!-- Default box -->

        <div class="card">

            <div class="card-header">

                <h3 class="card-title">Blog Listem</h3>

                <div class="card-tools">

                    <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">

                        <i class="fas fa-minus"></i>

                    </button>

                    <button type="button" class="btn btn-tool" data-card-widget="remove" data-toggle="tooltip" title="Remove">

                        <i class="fas fa-times"></i>

                    </button>

                </div>

            </div>

            <div class="card-body p-0">

                <table class="table table-striped projects">

                    <thead>

                        <tr>

                            <th style="width: 1%">

                                ID

                            </th>

                            <th style="width: 20%">

                                Blog Başlığı

                            </th>


                            <th>

                                Blog Puanı

                            </th>

                            <th style="width: 8%" class="text-center">

                                Durum

                            </th>

                            <th style="width: 20%">

                            </th>

                        </tr>

                    </thead>

                    <tbody>
                        @foreach (var item in Model)
                        {
                            if (item.BlogRating >= 0 && item.BlogRating < 50)
                            {
                                color = "progress-bar bg-red";
                                durum = "badge badge-danger";
                                ad = "Kötü";
                            }

                            if (item.BlogRating >= 50 && item.BlogRating < 75)
                            {
                                color = "progress-bar bg-warning";
                                durum = "badge badge-warning";
                                ad = "Orta";
                            }

                            if (item.BlogRating >= 75 && item.BlogRating <= 100)
                            {
                                color = "progress-bar bg-success";
                                durum = "badge badge-success";
                                ad = "Başarılı";
                            }
                            <tr>

                                <td>

                                    @item.BlogID

                                </td>

                                <td>

                                    <a>

                                        @item.BlogTitle

                                    </a>

                                    <br />

                                    <small>

                                        Created 01.01.2019

                                    </small>

                                </td>



                                <td class="project_progress">

                                    <div class="progress progress-sm">

                                        <div class="@color" role="progressbar" aria-volumenow="@item.BlogRating" aria-volumemin="0" aria-volumemax="10" style="width: @item.BlogRating%">

                                        </div>

                                    </div>

                                    <small>

                                        Aldığı Puan : @item.BlogRating

                                    </small>

                                </td>

                                <td class="project-state">

                                    <span class="@durum">@ad</span>

                                </td>

                                <td class="project-actions text-right">


                                    <a class="btn btn-info btn-sm" href="/User/UpdateBlogs/@item.BlogID">

                                        <i class="fas fa-pencil-alt">

                                        </i>

                                        Düzenle

                                    </a>

                                    <a class="btn btn-danger btn-sm" href="#">

                                        <i class="fas fa-trash">

                                        </i>

                                        Sil

                                    </a>

                                </td>

                            </tr>
                        }

                    </tbody>

                </table>

            </div>

            <!-- /.card-body -->

        </div>

        <!-- /.card -->

    </section>

    <a href="/User/AddNewBlogs" class="btn btn-primary">Yeni Blog Ekle</a>

</body>

</html>
