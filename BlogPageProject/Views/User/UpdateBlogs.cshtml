@model EntityLayer.Concrete.Blog

@{
    ViewBag.Title = "UpdateBlogs";
    Layout = "~/Views/Shared/AuthorLayout.cshtml";
}


<form class="form-group" method="post">
    @Html.Label("Blog ID") @*Label kısmı*@
    @Html.TextBoxFor(x => x.BlogID, new { @class = "form-control" }) @*İnput kısmı*@
    <br />

    @Html.Label("Blog Başlığı") @*Label kısmı*@
    @Html.TextBoxFor(x => x.BlogTitle, new { @class = "form-control" }) @*İnput kısmı*@
    <br />
    @Html.Label("Kategori") Label kısmı
    @Html.DropDownListFor(x => x.CategoryID, (List<SelectListItem>)ViewBag.values, new { @class = "form-control" })

    <br />
    @Html.Label("Resim Yolu") @*Label kısmı*@
    @Html.TextBoxFor(x => x.BlogImage, new { @class = "form-control" }) @*İnput kısmı*@
    <br />
    @Html.Label("Tarih") @*Label kısmı*@
    @Html.TextBoxFor(x => x.BlogDate, new { @class = "form-control" }) @*İnput kısmı*@
    <br />
    @Html.Label("Yazar") @*Label kısmı*@
    @Html.DropDownListFor(x => x.AuthorID, (List<SelectListItem>)ViewBag.values2, new { @class = "form-control" })
    <br />
    @Html.Label("İçerik")
    @Html.TextAreaFor(x => x.BlogContent, 7, 20, new { @class = "form-control" })


    <button class="btn btn-info">Kaydet</button>


</form>


