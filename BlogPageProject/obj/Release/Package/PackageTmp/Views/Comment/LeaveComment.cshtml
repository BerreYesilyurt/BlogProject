
<div class="comment-form-wrap pt-5">
    <h3 class="mb-5">Bir yorum bırak</h3>
    <form method="post" class="p-5 bg-light">
        <div class="form-group">
            <label for="name">Kullanıcı Adınız *</label>
            <input type="text" class="form-control" name="UserName">
        </div>
        <div class="form-group">
            <label for="email">Email *</label>
            <input type="email" class="form-control" name="Mail">
        </div>

        <input type="hidden" name="CommentDate" value="@DateTime.Now.ToShortDateString()" />

        <input type="hidden" name="BlogID" value="@ViewBag.id" />

        <div class="form-group">
            <label for="message">Yorumunuz</label>
            <textarea name="CommentText" cols="30" rows="10" class="form-control"></textarea>
        </div>

        <div class="form-group">
            <label> @Html.RadioButton("BlogRating",20)1</label>
            <label> @Html.RadioButton("BlogRating",40)2</label>
            <label> @Html.RadioButton("BlogRating",60)3</label>
            <label> @Html.RadioButton("BlogRating",80)4</label>
            <label> @Html.RadioButton("BlogRating",100)5</label>

            
        </div>
        <div class="form-group">
            <input type="submit" value="Yorum Yap" class="btn btn-primary">
        </div>

    </form>
</div>
